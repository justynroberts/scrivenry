{
  "name": "scrivenry",
  "version": "0.1.2",
  "description": "Self-hosted documentation platform with block-based editing",
  "author": "Fintonlabs <hello@fintonlabs.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/justynroberts/scrivenry"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3847",
    "build": "next build",
    "start": "next start -p 3847",
    "lint": "next lint",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "db:init": "npx tsx scripts/init-db.ts",
    "db:seed": "npx tsx scripts/seed-showcase.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "npx tsx tests/features.test.ts"
  },
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "@tanstack/react-query": "^5.59.0",
    "@tiptap/extension-code-block-lowlight": "^2.9.1",
    "@tiptap/extension-color": "^2.11.5",
    "@tiptap/extension-highlight": "^2.9.1",
    "@tiptap/extension-link": "^2.9.1",
    "@tiptap/extension-placeholder": "^2.9.1",
    "@tiptap/extension-table": "^2.9.1",
    "@tiptap/extension-table-cell": "^2.9.1",
    "@tiptap/extension-table-header": "^2.9.1",
    "@tiptap/extension-table-row": "^2.9.1",
    "@tiptap/extension-task-item": "^2.9.1",
    "@tiptap/extension-task-list": "^2.9.1",
    "@tiptap/extension-text-align": "^2.11.5",
    "@tiptap/extension-underline": "^2.9.1",
    "@tiptap/pm": "^2.9.1",
    "@tiptap/react": "^2.9.1",
    "@tiptap/starter-kit": "^2.9.1",
    "@tiptap/suggestion": "^2.9.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "better-sqlite3": "^11.5.0",
    "chart.js": "^4.5.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.0",
    "framer-motion": "^11.11.9",
    "lowlight": "^3.1.0",
    "lucia": "^3.2.1",
    "lucide-react": "^0.453.0",
    "mermaid": "^11.12.2",
    "next": "^15.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.5.4",
    "tippy.js": "^6.3.7",
    "ulid": "^2.3.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "drizzle-kit": "^0.27.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.15",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.47",
    "puppeteer": "^24.34.0",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.4.6",
    "typescript": "^5.6.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.fintonlabs.scrivenry",
    "productName": "Scrivenry",
    "copyright": "Copyright 2025 Fintonlabs",
    "npmRebuild": false,
    "directories": {
      "output": "dist-electron",
      "buildResources": "electron/resources"
    },
    "files": [
      ".next/**/*",
      "node_modules/**/*",
      "public/**/*",
      "electron/**/*",
      "package.json",
      "next.config.js",
      "data/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "electron/resources/node",
        "to": "node"
      }
    ],
    "asar": false,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "electron/resources/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "identity": "Justyn Roberts (2H574B6N62)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/resources/entitlements.mac.plist",
      "entitlementsInherit": "electron/resources/entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "icon": "electron/resources/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "electron/resources/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
